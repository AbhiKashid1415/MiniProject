@model ProjectMini.Models.Category
@{
    ViewBag.Title = "Create";
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center mb-4">Create Category</h2>
            <div>
                @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "p-3" }))
                {
                    <div class="form-group mb-3">
                        @Html.LabelFor(p => p.MainCategory.MainCategoryName, new { @class = "form-label" })
                        @Html.DropDownList("MainCategoryId", null, "Select MainCategory", new { @class = "form-control dropdown dropdown-toggle" })

                    </div>

                    <div class="form-group mb-3">
                        @Html.LabelFor(p => p.CategoryName, new { @class = "form-label" })
                        @Html.EditorFor(p => p.CategoryName, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Category" } })

                    </div>

                    <div class="text-center">
                        <input type="submit" value="Save" class="btn btn-primary px-4" />
                    </div>
                    <div class="text-center" style="font-size:18px">
                        <hr />
                        @Html.ActionLink("Back to list", "Index", null, new { @class = "text-decoration-none" })
                        <hr />
                    </div>
                }
            </div>
        </div>
    </div>
</div>




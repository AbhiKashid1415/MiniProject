@model ProjectMini.Models.Category
@{
    ViewBag.Title = "Edit";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2>Update Category Detail</h2>

            @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "p-3" }))
            {
                <div>
                    @Html.HiddenFor(p => p.CategoryId)
                </div>

                <div class="form-group mb-3">
                    @Html.LabelFor(p => p.MainCategory.MainCategoryName, new { @class = "form-label" })
                    @Html.DropDownList("MainCategoryId", null, null, new { @class = "form-control" })
                </div>

                <div class="form-group mb-3">
                    @Html.LabelFor(p => p.CategoryName, new { @class = "form-label" })
                    @Html.EditorFor(p => p.CategoryName, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter category name" } })
                </div>

                <div class="text-center">
                    <input type="submit" value="Update" class="btn btn-primary px-4" />
                </div>
                <div class="text-center" style="font-size:18px">
                    <hr />
                    @Html.ActionLink("Back to list", "Index", null, new { @class = "text-decoration-none" })
                    <hr />
                </div>
            }
        </div>
    </div>
</div>

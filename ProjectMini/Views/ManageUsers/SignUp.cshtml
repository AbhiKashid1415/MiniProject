@model ProjectMini.Models.User
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <title>SignUp</title>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow border-0" >
                    <div class="card-body p-3">
                        <h2 class="text-center mb-4 text-primary" style="font-family:fangsong;font-size:40px">New User Register</h2>
                        <div>
                            @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "p-2" }))
                            {
                                <div>
                                    @Html.ValidationSummary(true,null, new {@class = "text-danger"})
                                </div>
                                <div class="form-group mb-3">
                                    @Html.LabelFor(p => p.FirstName, new { @class = "form-label" })
                                    @Html.EditorFor(p => p.FirstName, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter First Name" } })
                                    @Html.ValidationMessageFor(p => p.FirstName, null, new { @class = "text-danger" })
                                </div>

                                <div class="form-group mb-3">
                                    @Html.LabelFor(p => p.LastName, new { @class = "form-label" })
                                    @Html.EditorFor(p => p.LastName, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Last Name" } })
                                    @Html.ValidationMessageFor(p => p.LastName, null, new { @class = "text-danger" })

                                </div>

                                <div class="form-group mb-3">
                                    @Html.LabelFor(p => p.Address, new { @class = "form-label" })
                                    @Html.TextAreaFor(p => p.Address, new { @class = "form-control", rows = 3, placeholder="Enter Current Address" })
                                    @Html.ValidationMessageFor(p => p.Address, null, new { @class = "text-danger" })
                                </div>

                                <div class="form-group mb-3">
                                    @Html.LabelFor(p => p.MobileNo, new { @class = "form-label" })
                                    @Html.EditorFor(p => p.MobileNo, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Mobile No" } })
                                    @Html.ValidationMessageFor(p => p.MobileNo, null, new { @class = "text-danger" })
                                </div>

                                <div class="form-group mb-3">
                                    @Html.LabelFor(p => p.EmailId, new { @class = "form-label" })
                                    @Html.EditorFor(p => p.EmailId, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Email Id" } })
                                    @Html.ValidationMessageFor(p => p.EmailId,null, new { @class = "text-danger" })
                                </div>


                                <div class="form-group mb-3">
                                    @Html.LabelFor(p => p.Password, new { @class = "form-label" })
                                    @Html.PasswordFor(p => p.Password, new { @class = "form-control"})
                                    @Html.ValidationMessageFor(p => p.Password, null, new { @class = "text-danger" })
                                </div>


                                <div class="text-center">
                                    <input type="submit" value="Register" class="btn btn-primary px-4" />
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
